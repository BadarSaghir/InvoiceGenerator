{
  "name": "invoice-generator",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "bootstrap": "^5.1.0",
    "electron-is-dev": "^2.0.0",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.3.2",
    "jspdf": "^2.3.1",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.0-beta.6",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-scripts": "4.0.3",
    "react-to-print": "^2.14.7",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"BROWSER=none yarn start\" \"yarn:electron\"",
    "pack:osx": "electron-packager . $npm_package_productName --out=dist/osx --platform=darwin --arch=x64 --icon=assets/build/osx/icon.icns && npm run codesign",
"pack:win32": "electron-packager . $npm_package_productName --out=dist/win --platform=win32 --prune=true --arch=ia32 --icon=./build/favicon.ico",
"pack:win64": "electron-packager . $npm_package_productName --out=dist/win --platform=win32 --prune=true--arch=x64 --version=0.36.2 app-version=1.0 --icon=--icon=./build/favicon.ico",
"build_app": "npm run pack:win32 && npm run pack:win64",
    "electron": "wait-on tcp:3000 && electron ."
  },
  "build": {
    "appId": "com.invoice.maker",
    "dir": "./build",
    "target": "invoice",
    "productName": "invoice",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "icon": "./public/favicon.ico" ,
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "./public/favicon.ico" 
    },
    "linux": {
      "icon": "./public/favicon.ico" 
    },
    
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./public/**/*"   
     
    ],
    "directories": {
      "buildResources": "public" 
    }
  },
  
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "electron": "^20.0.2",
    "electron-package": "^0.1.0",
    "wait-on": "^6.0.1"
  }
}
